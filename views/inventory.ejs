<%- include('top'); -%>
<style>
  .btn {
    border-radius: 5px;
    margin: 10px;
  }
  .update,
  .insert,
  .search,
  .Delete {
    margin-left: 15px;
  }
  .table {
    width:70%;
    margin:auto;
  }
  body {
    text-align: center;
    background-image: url(/img/inventory.jpg);
    background-size: cover;
  }
  input {
    margin-top: 5px;
  }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="crossorigin="anonymous"></script>
<h1 style="text-align: center; font-weight:500; font-size: 60px;">Inventory</h1>
<button id="searchbutton" style="margin-top: 50px;" class="btn btn-primary">To Search</button>
<button id="button-delete" style="margin-top: 50px;" class="btn btn-primary">For Deleting</button>
<button id="button-insert" style="margin-top: 50px;" class="btn btn-primary">For Inserting</button>
<button id="button-update" style="margin-top: 50px;" class="btn btn-primary">For Updating</button>


<body>

  <div class="search form-group">

    <form autocomplete="off" action="/invsearch" method="post" >
    <input type="text" name="search" id="search" placeholder="Name/Branch-ID"><br>
    <button type="submit" id="searchbtn" class="btn btn-success">Search</button><br>
    </form>
    

  </div>

  <div class="Delete">
    <form action="/inventory" method="post" autocomplete="off">
    <input type="text" id="brid" name="brid" placeholder="Branch-ID"><br>
    <input type="text" id="name" name="name" placeholder="Name"><br>
    <button type="submit" id='deletebtn' class="btn btn-success">Delete</button>
  </form>
  </div>


  <div class="insert">
    <form action="/invins" method="post" autocomplete="off">
      <input type="text" id="insert_nam" name="insert_nam" placeholder="Name"><br>
      <input type="text" id="insert_quan" name="insert_quan" placeholder="Quantity"><br>
      <input type="text" id="insert_price" name="insert_price" placeholder="Price"><br>
      <input type="text" id="insert_cond" name="insert_cond" placeholder="Condition"><br>
      <input type="text" id="insert_brid" name="insert_brid" placeholder="Branch-ID"><br>
      <button type="submit" id='insertbtn' class="btn btn-success">Insert</button>
    </form>
  </div>

  <div class="update form-group">
    <form action="/invupd" method="post" autocomplete="off">
      <input type="text" id="update_cond" name="update_cond" placeholder="New condition"><br>

      <input type="text" id="update_brid" name="update_brid" placeholder="Branch-ID"><br>

      <input type="text" id="update_name" name="update_name" placeholder="Name"><br>

      <button type="submit" id='updatebtn' class="btn btn-success">Update</button>
    </form>
  </div>

  
    <table class="table table-dark " style="margin-top:50px; text-align: center;">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Condition</th>
            <th scope="col">Branch-ID</th>
          </tr>
        </thead>
        <tbody>
            <%  for(var i=0;i<inv_rows.length ;i++){%>
                
          <tr>
            <th scope="row"><%= inv_rows[i].name%></th>
            <td><%= inv_rows[i].quantity%></td>
            <td><%= inv_rows[i].price%></td>
            <td><%= inv_rows[i].condition1%></td>
            <td><%= inv_rows[i].branch_id%></td>
          </tr>
          <%}%>
        </tbody>
      </table>

      
      <script>
        $(".Delete").hide();
        $(".insert").hide();
        $(".update").hide();
        $(".search").hide();

        // $("#Viewtablebtn").hide();


          $("#button-delete").click(function(){
            $(".insert").hide();
            $(".update").hide();
            $(".search").hide();
            $(".Delete").toggle();
          });

          $("#button-insert").click(function(){
            $(".update").hide();
            $(".search").hide();
            $(".Delete").hide();
            $(".insert").toggle();
          });
          $("#button-update").click(function(){
            $(".search").hide();
            $(".Delete").hide();
            $(".insert").hide();
            $(".update").toggle();
          });
          
          $("#searchbutton").click(function(){
            $(".Delete").hide();
            $(".insert").hide();
            $(".update").hide();
            $(".search").toggle();
            
          });
         
          
      </script>

      <%- include('bottom'); -%>